@namespace Cads


  <DoughnutPlot Length="Length"
    data=@(_ZDepthValues.Select(d => new PlotInfo(d.y,FrameLength,d.z.z,"")).ToArray()) animate="@_AnimateSearch" Y=@SelectedY
    SY=0 />


@code {

  protected List<ZDepth> _ZDepthValues = new List<ZDepth>();
  

	public List<ZDepth> ZDepthValues { 
    get{ return _ZDepthValues;} 
    set{
      _ZDepthValues = value;
      StateHasChanged();
    }
  }

  protected bool _AnimateSearch = false;
  public bool AnimateSearch { 
    get{ return _AnimateSearch;} 
    set{ 
      var tmp = _AnimateSearch;
      _AnimateSearch = value;
      if(tmp != value) {StateHasChanged();}
    } 
  }

  [Parameter]
  public double Length { get; set; } = 0;

  [Parameter]
  public  double FrameLength{ get; set; } = 4000;

  [Parameter]
  public EventCallback<ZDepth> SelectedRow { get; set; }
  
  [Parameter]
  public EventCallback<double> SelectedY { get; set; }
  

}