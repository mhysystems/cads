	"version": "0.2.0",
	"configurations": [
    {
      "name": "Launch Debugger with valgrind",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/debug/cads",
      "preLaunchTask": "valgrind-debug",
      "args": ["-t", "-c", "${workspaceFolder}/config.json"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Connect to valgrind",
          "text": "target remote | vgdb",
          "ignoreFailures": true
        }
      ]
    },
		{
			"name": "(gdb) Playback",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/debug/cads",
			"args": ["-c", "${workspaceFolder}/config.json"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/debug",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"miDebuggerPath": "/usr/bin/gdb"
		},
    {
			"name": "(gdb) gocator Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/debug/cads",
			"args": ["-c", "${workspaceFolder}/gconfig.json"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/debug",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"miDebuggerPath": "/usr/bin/gdb"
		},
    {
			"name": "(gdb) Unit Tests",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/debug/test/cads_unit_tests",
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/debug",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"miDebuggerPath": "/usr/bin/gdb"
		} 
	]
}